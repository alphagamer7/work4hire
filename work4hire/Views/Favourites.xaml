<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="work4hire.Views.Favourites"
             Title="Favourites">
  <Grid>
    <StackLayout>
        <ScrollView>
     <!--Decare the frame property -->
            <Frame>
            <HorizontalStackLayout>
                    <Frame Margin="10"
                    BorderColor="{StaticResource Black}"
                    HeightRequest="100"
                    WidthRequest="100"
                    IsClippedToBounds="True"
                    HorizontalOptions="Center"
                    VerticalOptions="Center">
                        <Image Source="user.png"
                    Aspect="AspectFill"
                    Margin="-40"
                    HeightRequest="100"
                    WidthRequest="100" />
                    </Frame>
                    <VerticalStackLayout VerticalOptions="Center">
                        <Label Text="Work Title(fav)" FontSize="24" TextColor="{StaticResource Gray400}"/>
                        <Label Text="CreatedDate" FontSize="14" TextColor="{StaticResource Gray400}"/>
                        <Label Text="Location" FontSize="14" TextColor="{StaticResource Gray400}"/>
                    </VerticalStackLayout>
            </HorizontalStackLayout>
            </Frame>

        </ScrollView>
    </StackLayout>
    </Grid>
</ContentPage>
